<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.padtool</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="30"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form" />
            <field name="arch" type="xml">
            	<xpath expr="//div[hasclass('settings_tab')]" position="attributes" >
            		<attribute name="class">settings_tab o_hidden</attribute>
            	</xpath>
            	<xpath expr="//div[hasclass('o_setting_search')]" position="attributes" >
            		<attribute name="class">o_setting_search o_hidden</attribute>
            	</xpath>
                <xpath expr="//div[hasclass('settings')]" position="inside" >
                    <div class="app_settings_block" data-string="Padtool" string="Padtool" data-key="padtool" groups="padtool.group_pad_manager">
                        <div class="row mt16 o_settings_container">
                       
                        
                        	<div class="col-xs-12 col-md-6 o_setting_box">
                                    <div class="o_setting_right_pane">
                                        <label string="Region Setting"/>
                                        <div class="content-group">
                                            <div class="mt16 row">
                                                <label  string="height:" class="col-xs-3 col-md-3 o_light_label"/>
                                                <field name="region_height" class="oe_inline" required="1"/><span>um</span>
                                            </div>
                                            <div class="mt16 row">
                                                <label  string="overlap:" class="col-xs-3 col-md-3 o_light_label"/>
                                                <field name="region_overlap" class="oe_inline" required="1"/><span>um</span>
                                            </div>
                                        </div>
                                    </div>
							</div>
							
                        	<div class="col-xs-12 col-md-6 o_setting_box">
                                    <div class="o_setting_right_pane">
                                        <label string="hawkeye Setting"/>
                                        <div class="content-group">
                                            <div class="mt16 row">
                                                <label  string="width:" class="col-xs-3 col-md-3 o_light_label"/>
                                                <field name="hawk_width" class="oe_inline" required="1"/>  
                                                <span>px</span>
                                            </div>
                                            <div class="mt16 row">
                                                <label  string="height:" class="col-xs-3 col-md-3 o_light_label"/>
                                                <field name="hawk_height" class="oe_inline" required="1"/>
												<span>px</span>
                                            </div>
                                        </div>
                                    </div>
							</div>
                                
							
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

       	<record id="action_pad_config_settings" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module' : 'padtool'}</field>
    	</record>

        <menuitem id="padtool.menu_setting" name="Configuration" parent="padtool.menu_root"
            sequence="100" groups="group_pad_manager"/>
        <menuitem id="menu_stock_general_settings" name="Settings" parent="padtool.menu_setting"
            sequence="0" action="action_pad_config_settings" groups="group_pad_manager"/>
    </data>
</odoo>
