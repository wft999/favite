<?xml version="1.0" encoding="UTF-8"?>

<templates xml:space="preserve">
<t t-name="Map">
	<div class="canvas-map" style="width:1150px; height:100%; overflow:auto;">
		<canvas id="map" width="800" height="600"  style="border:1px solid #d3d3d3;">
                Your browser does not support the HTML5 canvas tag.
		</canvas>
	</div>
	
</t>

<t t-name="Glassmap.Buttons">
    <div class="btn-group glassmap-mode" role="group">
		<button class="btn btn-default fa fa-mouse-pointer active" title="Select" data-mode="default"/>
        <button class="btn btn-default fa  fa-search-plus" title="Zoom In" data-mode="zoom-in"/>
		<button class="btn btn-default fa fa-search-minus" title="Zoom Out" data-mode="zoom-out"/>
    </div>
</t>

<t t-name="Map.info">
	<li class="o_planner_systray">
		<a><span class="map-info" align="right"></span></a>
    </li>
</t>

<t t-name="Panelmap.Buttons">
	<div class="btn-group btn-group-md" role="group">
        <button class="btn btn-default btn-sm dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
            Objects <span class="caret"/>
        </button>
        <ul class="dropdown-menu o_pad_object_list">
            <li class="selected"><a href="#">frame</a></li>
            <li><a href="#">mainMark</a></li>
            <li><a href="#">subMark</a></li>
            <li><a href="#">uninspectZone</a></li>
            <li><a href="#">inspectZone</a></li>
            <li class="divider"></li>
            <li><a href="#">Export</a></li>
        </ul>
    </div>
    <div class="btn-group btn-group-md" role="group">
		<button class="btn btn-default fa fa-eye" title="Hawkeye" data-mode="hawkeye"/>
		<button class="btn btn-default fa fa-save" title="Save" data-mode="select"/>
    </div>
    <div class="btn-group btn-group-md glassmap-mode" role="group">
		<button class="btn btn-default fa fa-mouse-pointer active" title="Select" data-mode="default"/>
        <button class="btn btn-default fa  fa-search-plus" title="Zoom In" data-mode="zoom-in"/>
		<button class="btn btn-default fa fa-search-minus" title="Zoom Out" data-mode="zoom-out"/>
		<button class="btn btn-default fa fa-edit" title="Draw" data-mode="crosshair"/>
		<button class="btn btn-default fa fa-paste" title="Paste" data-mode="paste"/>
    </div>
    
    
	<div class="btn-group btn-group-md"  role="group">
        <button class="btn btn-default fa fa-copy" title="Copy" data-mode="copy"/>
        <button class="btn btn-default fa fa-cut" title="Delete Point" data-mode="zoom_in"/>
        <button class="btn btn-default fa fa-trash" title="Delete Object" data-mode="zoom_in"/>
	</div>
	<div class="btn-group btn-group-md"  role="group">
		<button class="btn btn-default fa fa-align-justify" title="GOA" data-mode="GOA"/>
		<button class="btn btn-default fa fa-repeat o_hidden" title="Redo" data-mode="select"/>
		<button class="btn btn-default fa fa-undo o_hidden" title="Undo" data-mode="select"/>
	</div>
</t>

<t t-name="Hawkmap">
	<div class="panel panel-default panel-hawk o_hidden">
  		<div class="panel-heading">
  			<span>Hawkeye</span>
  		</div>
  		<div  class="canvas-map panel-body">
  			<canvas id="hawk" width="400" height="400">
                Your browser does not support the HTML5 canvas tag.
			</canvas>
  		</div>
    	
	</div>
</t>

</templates>    