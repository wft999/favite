<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_padtool_update_file" model="ir.ui.view">
            <field name="name">Module Update</field>
            <field name="model">favite.module.update.wizard</field>
            <field name="arch" type="xml">
                <form string="Import Zip File">
                    <group>
                        <field name="data" filename="filename" widget="zip_upload"/>
                        <field name="filename" invisible="1"/>
                    </group>
                    <footer>
                        <button name="import_file" string="_Import" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
